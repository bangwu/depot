<h1>Store#index</h1>
<% @products.each do |product|%>
    <div class="product">
      <img class="img" src="<%= asset_path product.image_url%>"/>
      <h3><%= product.title %></h3>
      <%= product.description %>
      <span class="price"><%= number_to_currency(product.price) %></span>
      <%= button_to "add cart", :action => :add_to_cart, :id => product %>
    </div>
<% end%>